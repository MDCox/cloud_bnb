<%= form_for @property, :html => { :multipart => true } do |f| %>
<div class="form-group">
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :description %><br/>
  <%= f.text_area :description %>
</div>
<div class="form-group">
  <%= f.label :price %><br/>
  <%= f.number_field :price, :step => 'any' %>
</div>
<div class="form-group">
  <%= f.label :location %><br/>
  <%= f.select :location, options_for_select([["Portland"], ["New York"], ["Seattle"]]) %>
</div><br/>

<div class="form-group">
  <%= f.label :image, "Photo of your property: "%>
  <%= f.file_field :image %>
</div>

  <%= f.hidden_field :owner_id, value: current_user.id %>
  <%= f.submit %>
<% end %>
