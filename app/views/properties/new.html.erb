<h1>Add a listing</h1>

<%= form_for @property do |f| %>
<div class="form-group">
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :description %><br/>
  <%= f.text_area :description %>
</div>
<div class="form-group">
  <%= f.label :price %><br/>
  <%= f.number_field :price, :step => 'any' %>
</div>
<div class="form-group">
  <%= f.label :location %><br/>
  <%= f.select :location, options_for_select([["Portland"], ["New York"], ["Seattle"]]) %>
</div><br/>

  <%= f.hidden_field :owner_id, value: current_user.id %>
  <%= f.submit "Add Listing" %>
<% end %>
